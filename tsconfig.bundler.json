{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.bundler.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext"],
    "typeRoots": ["./node_modules/@types", "./bundler.d.ts"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "."
  },
  "include": [
    "vite.config.ts",
    "dev.ts",
    "build.ts",
    "info.ts",
    "src/shared/**/*.ts",
    "src/server/utils/*.ts"
  ]
}
